[default]
aws_region = "us-west-2"

# OpenSearch (use the endpoint printed by terraform; full URL or host is fine)
opensearch_endpoint = "https://search-YOUR-DOMAIN-NAME.us-west-2.es.amazonaws.com"
opensearch_index = "beigebook-docs"

# Bedrock / LLM
claude_model = "amazon.nova-premier-v1:0"         # Amazon Nova Premier
bedrock_embedding_model = "amazon.titan-embed-text-v2:0"  # your embedding model id

# Embedding dimensions (must match the embed model you use)
embed_dim = 1024

# Optional tuning
chunk_size = 800
max_rounds = 3

# If you want the app to access S3 (ingest flows or uploads)
s3_bucket = "YOUR-S3-BUCKET-NAME"